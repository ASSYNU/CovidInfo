<Window
    Background="#242424"
    Height="450"
    Loaded="Window_Loaded"
    MinHeight="450"
    MinWidth="850"
    Title="Covid-19 Info"
    Width="850"
    mc:Ignorable="d"
    x:Class="CovidInfo.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:CovidInfo"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Window.Resources>
        <SolidColorBrush Color="#FF242424" x:Key="RedBrush" />

        <SolidColorBrush Color="Transparent" x:Key="SolidBorderBrush" />

        <SolidColorBrush Color="#FF303030" x:Key="GreenBrush" />

        <SolidColorBrush Color="Transparent" x:Key="DisabledBackgroundBrush" />

        <SolidColorBrush Color="Transparent" x:Key="DisabledBorderBrush" />

        <SolidColorBrush Color="#888" x:Key="DisabledForegroundBrush" />

        <Style TargetType="{x:Type TabItem}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type TabItem}">
                        <Grid>
                            <Border
                                Background="{StaticResource RedBrush}"
                                BorderBrush="{StaticResource SolidBorderBrush}"
                                BorderThickness="1"
                                CornerRadius="8"
                                Margin="0"
                                Name="Border">
                                <ContentPresenter
                                    ContentSource="Header"
                                    HorizontalAlignment="Center"
                                    Margin="10"
                                    RecognizesAccessKey="True"
                                    VerticalAlignment="Center"
                                    x:Name="ContentSite" />
                            </Border>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Panel.ZIndex" Value="100" />
                                <Setter Property="Background" TargetName="Border" Value="{StaticResource GreenBrush}" />
                                <Setter Property="BorderThickness" TargetName="Border" Value="1,1,1,0" />
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" TargetName="Border" Value="{StaticResource DisabledBackgroundBrush}" />
                                <Setter Property="BorderBrush" TargetName="Border" Value="{StaticResource DisabledBorderBrush}" />
                                <Setter Property="Foreground" Value="{StaticResource DisabledForegroundBrush}" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <ScrollViewer HorizontalScrollBarVisibility="Auto">
        <Grid
            HorizontalAlignment="Stretch"
            Margin="15,0,15,0"
            VerticalAlignment="Stretch">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <TextBlock FontSize="30" Margin="20">Covid-19 Data For Poland</TextBlock>

            <Button
                Click="Refresh"
                FontSize="12"
                Foreground="Black"
                Height="30"
                HorizontalAlignment="Right"
                Margin="0,0,15,0"
                VerticalAlignment="Center"
                Width="30">
                <Image
                    Cursor="Arrow"
                    Source="/Refresh_icon.png"
                    Stretch="Fill"
                    StretchDirection="Both" />
                <Button.Style>
                    <Style TargetType="{x:Type Button}">
                        <Setter Property="Background" Value="Transparent" />
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="{x:Type Button}">
                                    <Border Background="{TemplateBinding Background}">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Foreground" Value="White" />
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>

            <TabControl
                    Background="#FF242424"
                    Margin="10"
                    Name="Tabs"
                    Grid.Row="1">
                <TabItem Header="Daily">
                    <Grid
                            Height="Auto"
                            Margin="10,25,10,25"
                            Width="Auto">
                        <Grid.RowDefinitions>
                            <RowDefinition />
                            <RowDefinition />
                        </Grid.RowDefinitions>

                        <TextBlock
                                FontFamily="Roboto"
                                FontSize="25"
                                FontWeight="Normal"
                                Grid.Row="0"
                                Margin="10,0,0,0"><Run Text="Today" /></TextBlock>
                        <Grid Grid.Row="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                                <ColumnDefinition />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>

                            <Border
                                    Background="#155d27"
                                    CornerRadius="10"
                                    Grid.Column="0"
                                    Margin="5,5,5,5"
                                    MinHeight="75">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition />
                                        <RowDefinition />
                                    </Grid.RowDefinitions>

                                    <TextBlock
                                            FontFamily="Roboto"
                                            Grid.Row="0"
                                            Margin="10,10,5,0"
                                            Text="Deaths" />
                                    <TextBlock
                                            FontFamily="Roboto"
                                            Grid.Row="1"
                                            Margin="15,0,5,10"
                                            x:Name="todayDeaths"><Run Text="0" /></TextBlock>
                                </Grid>
                            </Border>

                            <Border
                                    Background="#208b3a"
                                    CornerRadius="10"
                                    Grid.Column="1"
                                    Margin="5,5,5,5"
                                    MinHeight="75">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition />
                                        <RowDefinition />
                                    </Grid.RowDefinitions>

                                    <TextBlock
                                            FontFamily="Roboto"
                                            Grid.Row="0"
                                            Margin="10,10,5,0"
                                            Text="Cases" />
                                    <TextBlock
                                            FontFamily="Roboto"
                                            Grid.Row="1"
                                            Margin="15,0,5,10"
                                            x:Name="todayCases"><Run Text="0" /></TextBlock>
                                </Grid>
                            </Border>

                            <Border
                                    Background="#2dc653"
                                    CornerRadius="10"
                                    Grid.Column="2"
                                    Margin="5,5,5,5"
                                    MinHeight="75">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition />
                                        <RowDefinition />
                                    </Grid.RowDefinitions>

                                    <TextBlock
                                            FontFamily="Roboto"
                                            Grid.Row="0"
                                            Margin="10,10,5,0"
                                            Text="Recovered" />
                                    <TextBlock
                                            FontFamily="Roboto"
                                            Grid.Row="1"
                                            Margin="15,0,5,10"
                                            x:Name="todayRecovered"><Run Text="0" /></TextBlock>
                                </Grid>
                            </Border>

                        </Grid>
                        <Grid Margin="0,0,-10,0" Width="731">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="0" />
                                <RowDefinition Height="1*" />
                                <RowDefinition Height="2*" />
                                <RowDefinition Height="2*" />
                                <RowDefinition Height="1*" />
                            </Grid.RowDefinitions>

                        </Grid>
                    </Grid>
                </TabItem>
                <TabItem
                        Header="Total"
                        Height="Auto"
                        Width="Auto">
                    <Grid

                            Height="Auto"
                            Margin="10,25,10,25"
                            Width="Auto">
                        <Grid.RowDefinitions>
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                        </Grid.RowDefinitions>

                        <TextBlock FontFamily="Roboto" FontSize="25"><Run Text="Total" /></TextBlock>

                        <Grid Grid.Row="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>

                            <Border
                                    Background="#023e8a"
                                    CornerRadius="10"
                                    Grid.Column="0"
                                    Margin="5,5,5,5"
                                    MinHeight="75">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition />
                                        <RowDefinition />
                                    </Grid.RowDefinitions>

                                    <TextBlock
                                            FontFamily="Roboto"
                                            Grid.Row="0"
                                            Margin="10,10,5,0"
                                            Text="Deaths" />
                                    <TextBlock
                                            FontFamily="Roboto"
                                            Grid.Column="0"
                                            Grid.Row="1"
                                            Margin="15,0,5,10"
                                            Text="0"
                                            x:Name="deaths" />
                                </Grid>
                            </Border>

                            <Border
                                    Background="#0077b6"
                                    CornerRadius="10"
                                    Grid.Column="1"
                                    Margin="5,5,5,5"
                                    MinHeight="75">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition />
                                        <RowDefinition />
                                    </Grid.RowDefinitions>

                                    <TextBlock
                                            FontFamily="Roboto"
                                            Grid.Row="0"
                                            Margin="10,10,5,0"
                                            Text="Cases" />
                                    <TextBlock
                                            FontFamily="Roboto"
                                            Grid.Column="1"
                                            Grid.Row="1"
                                            Margin="15,0,5,10"
                                            Text="0"
                                            x:Name="cases" />
                                </Grid>
                            </Border>


                        </Grid>
                        <Grid Grid.Row="2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>

                            <Border
                                    Background="#0096c7"
                                    CornerRadius="10"
                                    Grid.Column="1"
                                    Margin="5,5,5,5"
                                    MinHeight="75">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition />
                                        <RowDefinition />
                                    </Grid.RowDefinitions>

                                    <TextBlock
                                            FontFamily="Roboto"
                                            Grid.Row="0"
                                            Margin="10,10,5,0"
                                            Text="Recovered" />
                                    <TextBlock
                                            FontFamily="Roboto"
                                            Grid.Column="2"
                                            Grid.Row="1"
                                            Margin="15,0,5,10"
                                            Text="0"
                                            x:Name="recovered" />
                                </Grid>
                            </Border>

                            <Border
                                    Background="#00b4d8"
                                    CornerRadius="10"
                                    Grid.Column="0"
                                    Margin="5,5,5,5"
                                    MinHeight="75">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition />
                                        <RowDefinition />
                                    </Grid.RowDefinitions>

                                    <TextBlock
                                            FontFamily="Roboto"
                                            Grid.Row="0"
                                            Margin="10,10,5,0"
                                            Text="Tests" />
                                    <TextBlock
                                            FontFamily="Roboto"
                                            Grid.Column="2"
                                            Grid.Row="1"
                                            Margin="15,0,5,10"
                                            Text="0"
                                            x:Name="tests" />
                                </Grid>
                            </Border>
                        </Grid>
                    </Grid>
                </TabItem>
                <TabItem
