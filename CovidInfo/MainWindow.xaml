                                    Grid.Column="0"
                                    Margin="5,5,5,5">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition />
                                        <RowDefinition />
                                    </Grid.RowDefinitions>

                                    <TextBlock
                                            FontFamily="Roboto"
                                            Grid.Row="0"
                                            Margin="10,10,5,0"
                                            Text="Cases" />
                                    <TextBlock
                                            FontFamily="Roboto"
                                            Grid.Column="0"
                                            Grid.Row="1"
                                            Margin="15,0,5,10"
                                            Text="0"
                                            x:Name="casesPerOneMillion" />
                                </Grid>
                            </Border>

                            <Border
                                    Background="#b21e35"
                                    CornerRadius="10"
                                    Grid.Column="1"
                                    Margin="5,5,5,5">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition />
                                        <RowDefinition />
                                    </Grid.RowDefinitions>

                                    <TextBlock
                                            FontFamily="Roboto"
                                            Grid.Row="0"
                                            Margin="10,10,5,0"
                                            Text="Deaths" />
                                    <TextBlock
                                            FontFamily="Roboto"
                                            Grid.Column="1"
                                            Grid.Row="1"
                                            Margin="15,0,5,10"
                                            Text="0"
                                            x:Name="deathsPerOneMillion" />
                                </Grid>
                            </Border>


                        </Grid>
                        <Grid Grid.Row="2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>

                            <Border
                                    Background="#c71f37"
                                    CornerRadius="10"
                                    Grid.Column="0"
                                    Margin="5,5,5,5">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition />
                                        <RowDefinition />
                                    </Grid.RowDefinitions>

                                    <TextBlock
                                            FontFamily="Roboto"
                                            Grid.Row="0"
                                            Margin="10,10,5,0"
                                            Text="Recovered" />
                                    <TextBlock
                                            FontFamily="Roboto"
                                            Grid.Column="1"
                                            Grid.Row="1"
                                            Margin="15,0,5,10"
                                            Text="0"
                                            x:Name="recoveredPerOneMillion" />
                                </Grid>
                            </Border>

                            <Border
                                    Background="#e01e37"
                                    CornerRadius="10"
                                    Grid.Column="1"
                                    Margin="5,5,5,5">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition />
                                        <RowDefinition />
                                    </Grid.RowDefinitions>

                                    <TextBlock
                                            FontFamily="Roboto"
                                            Grid.Row="0"
                                            Margin="10,10,5,0"
                                            Text="Tests" />
                                    <TextBlock
                                            FontFamily="Roboto"
                                            Grid.Column="2"
                                            Grid.Row="1"
                                            Margin="15,0,5,10"
                                            Text="0"
                                            x:Name="testsPerOneMillion" />
                                </Grid>
                            </Border>
                        </Grid>
                    </Grid>
                </TabItem>
                <TabItem
                        Header="Per People"
                        Height="Auto"
                        Width="Auto">
                    <Grid
                            Height="Auto"
                            Margin="10,25,10,25"
                            Width="Auto">
                        <Grid.RowDefinitions>
                            <RowDefinition />
                            <RowDefinition />
                        </Grid.RowDefinitions>

                        <TextBlock FontSize="25"><Run Text="Per People" /></TextBlock>
                        <Grid Grid.Row="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                                <ColumnDefinition />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>

                            <Border
                                    Background="#6d23b6"
                                    CornerRadius="10"
                                    Grid.Column="0"
                                    Margin="5,5,5,5">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition />
                                        <RowDefinition />
                                    </Grid.RowDefinitions>

                                    <TextBlock
                                            FontFamily="Roboto"
                                            Grid.Row="0"
                                            Margin="10,10,5,0"
                                            Text="Cases per one man" />
                                    <TextBlock
                                            FontFamily="Roboto"
                                            Grid.Column="0"
                                            Grid.ColumnSpan="2"
                                            Grid.Row="1"
                                            Margin="15,0,5,10"
                                            Text="0"
                                            x:Name="oneCasePerPeople" />
                                </Grid>
                            </Border>

                            <Border
                                    Background="#822faf"
                                    CornerRadius="10"
                                    Grid.Column="1"
                                    Margin="5,5,5,5">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition />
                                        <RowDefinition />
                                    </Grid.RowDefinitions>

                                    <TextBlock
                                            FontFamily="Roboto"
                                            Grid.Row="0"
                                            Margin="10,10,5,0"
                                            Text="Deaths per one man" />
                                    <TextBlock
                                            FontFamily="Roboto"
                                            Grid.Column="1"
                                            Grid.ColumnSpan="2"
                                            Grid.Row="1"
                                            Margin="15,0,5,10"
                                            Text="0"
                                            x:Name="oneDeathPerPeople" />
                                </Grid>
                            </Border>

                            <Border
                                    Background="#973aa8"
                                    CornerRadius="10"
                                    Grid.Column="2"
                                    Margin="5,5,5,5">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition />
                                        <RowDefinition />
                                    </Grid.RowDefinitions>

                                    <TextBlock
                                            FontFamily="Roboto"
                                            Grid.Row="0"
                                            Margin="10,10,5,0"
                                            Text="Tests per one man" />
                                    <TextBlock
                                            FontFamily="Roboto"
                                            Grid.Column="2"
                                            Grid.ColumnSpan="2"
                                            Grid.Row="1"
                                            Margin="15,0,5,10"
                                            Text="0"
                                            x:Name="oneTestPerPeople" />
                                </Grid>
                            </Border>
                        </Grid>

                    </Grid>
                </TabItem>
